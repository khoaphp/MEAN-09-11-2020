<link rel="stylesheet" href="./css/register.css" />
<script src="./js/register.js"></script>

<div class="row">

    <h1>Register new account</h1>

    <div class="col-12 lineText">
        <label class="form-label">Email <span class="text-muted"></span></label>
        <input type="email" class="form-control" id="email" placeholder="you@example.com">
    </div>

    <div class="col-12 lineText">
        <label class="form-label">Password <span class="text-muted"></span></label>
        <input type="password" class="form-control" id="password" placeholder="Password">
    </div>

    <div class="col-12 lineText">
        <label class="form-label">Re Password <span class="text-muted"></span></label>
        <input type="password" class="form-control" id="repassword" placeholder="Re Password">
    </div>

    <div class="col-6 lineText">
        <label class="form-label">Avatar Image <span class="text-muted"></span></label>
        <input type="file" name="userAvatar" id="userAvatar" />
    </div>

    <div class="col-6 lineText">
        <img src="./img/user.png" height="100" id="imgAvatar" />
        <input type="hidden" id="hidAvatar" value="" />
    </div>

    <div class="col-12 lineText">
        <label  class="form-label">Full Name <span class="text-muted"></span></label>
        <input type="text" class="form-control" id="Fullname" placeholder="Full Name">
    </div>

    <div class="col-12 lineText">
        <label  class="form-label">Address <span class="text-muted"></span></label>
        <input type="text" class="form-control" id="Address" placeholder="Address">
    </div>

    <div class="col-12 lineText">
        <label  class="form-label">Phone <span class="text-muted"></span></label>
        <input type="text" class="form-control" id="Phone" placeholder="Phone number">
    </div>

    <hr class="my-4">

    <button id="btnRegister" class="w-100 btn btn-primary btn-lg" type="button">Register</button>

</div>