<script src="./js/admin-user.js"></script>
<link rel="stylesheet" href="./css/user.css" />

<h3>Welcome <span id="userName"></span></h3>
<h2>USERS ADMINISTRATOR</h2>
<!-- Email, Image, Active, userGroup -->
<div class="container">
    <div class="row">
      <div class="col-sm">
        <!-- Left column-->
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Email</th>
                <th scope="col">Avatar</th>
                <th scope="col">Active</th>
                <th scope="col">Group</th>
              </tr>
            </thead>
            <tbody id="list_Users">
              
            </tbody>
          </table>
        <!-- // Left column-->
      </div>
      <div class="col-sm">
        <!-- Right column -->
        <div class="row">

            <div class="col-12 lineText">
                <label class="form-label">Email <span class="text-muted"></span></label>
                <input type="email" class="form-control" id="email" placeholder="you@example.com">
            </div>
            
            <div class="col-12 lineText">
                <div class="row">

                    <div class="col-6">
                        Active: <input type="checkbox" id="activated" />
                    </div>
                    
                    <div class="col-6">
                        User Group:
                        <select id="userGroup">
                            <option value="0">Khách hàng</option>
                            <option value="1">Admin</option>
                        </select>
                    </div>

                <div class="row">

            </div>

            <div class="col-12 lineText">
                <label class="form-label">Password <span class="text-muted"></span></label>
                <input type="password" class="form-control" id="password" placeholder="Password">
            </div>
        
            <div class="col-6 lineText">
                <label class="form-label">Avatar Image <span class="text-muted"></span></label>
                <input type="file" name="userAvatar" id="userAvatar" />
            </div>
        
            <div class="col-6 lineText">
                <img src="./img/user.png" height="100" id="imgAvatar" />
                <input type="hidden" id="hidAvatar" value="" />
            </div>
        
            <div class="col-12 lineText">
                <label  class="form-label">Full Name <span class="text-muted"></span></label>
                <input type="text" class="form-control" id="Fullname" placeholder="Full Name">
            </div>
        
            <div class="col-12 lineText">
                <label  class="form-label">Address <span class="text-muted"></span></label>
                <input type="text" class="form-control" id="Address" placeholder="Address">
            </div>
        
            <div class="col-12 lineText">
                <label  class="form-label">Phone <span class="text-muted"></span></label>
                <input type="text" class="form-control" id="Phone" placeholder="Phone number">
            </div>
        
            <hr class="my-4">
            
            
            <div class="row">
                <div class="col-4">
                    <button id="btnAddnew" class="w-30 btn btn-primary" type="button">Add new</button>
                </div>
                <div class="col-4">
                    <button id="btnUpdate" class="w-30 btn btn-primary" type="button">Update</button>
                </div>
                <div class="col-4">
                    <button id="btnDelete" class="w-30 btn btn-primary" type="button">Delete</button>
                </div>
            </div>
        </div>
        <!-- // Right column -->
      </div>
    </div>
</div>